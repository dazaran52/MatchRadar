{
  "expo": {
    "name": "glitch-app",
    "slug": "glitch-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2E004E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.glitch.app",
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Allow Glitch to access Bluetooth to scan for devices"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#2E004E"
      },
      "package": "com.glitch.app",
      "permissions": [
        "android.permission.BLUETOOTH",
        "android.permission.BLUETOOTH_ADMIN",
        "android.permission.BLUETOOTH_CONNECT",
        "android.permission.BLUETOOTH_SCAN",
        "android.permission.ACCESS_FINE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": [
            "central",
            "peripheral"
          ],
          "bluetoothAlwaysPermission": "Allow Glitch to access Bluetooth to scan for devices"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
